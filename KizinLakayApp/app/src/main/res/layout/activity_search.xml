<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ivSearchDetails"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="0.22"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivSearchDetails"
        android:layout_alignParentStart="true"
        android:hint="Acra"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="11dp"
        android:layout_weight="0.54"
        android:ems="10"
        android:hint="1lb. malanga        1 shallot or 1/2onion 1scallion        1 tsp salt to taste"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnPreparation"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="Voir preparation" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Ingredients :"
        android:textSize="14sp"
        android:layout_below="@+id/ivSearchDetails"
        android:layout_alignParentStart="true" />
</RelativeLayout>