<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scaleType="fitXY"
    >

   <!-- <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idlist"
        >

    </ListView>-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="CatÃ©gories de Mets"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/background_light"
        android:textSize="32sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btnmeat"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        android:background="@drawable/design_button_menu"
        android:text="VIANDES"
        android:textColor="@color/red"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btndessert"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnmeat"
        android:layout_marginTop="60dp"
        android:background="@drawable/design_button_menu"
        android:text="DESSERTS"
        android:textColor="@color/red"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btnsoup"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btndessert"
        android:layout_marginTop="60dp"
        android:background="@drawable/design_button_menu"
        android:text="SOUPES"
        android:textColor="@color/red"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btndrink"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnsoup"
        android:layout_marginTop="40dp"
        android:background="@drawable/design_button_menu"
        android:text="JUS HAITIENNE"
        android:textColor="@color/red"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textSize="30sp"
        />



</RelativeLayout>